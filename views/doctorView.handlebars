<section>
    <article class="mt-4"> 
        <h1 class="title has-text-centered">Welcome Dr. {{lastName}}!</h1> 
    </article>
    
    <main class ="columns mt-3">
      <section class="column is-3 is offset-1">
        <article class="panel is-info">
          <p class="panel-heading">
            Patient Information
          </p>
          <p class="panel-tabs">
            <a class="is-active">All</a>
          </p>
          <div class="panel-block">
            <p class="control has-icons-left">
              <input class="input is-info" type="text" placeholder="Search">
              <span class="icon is-left">
                <i class="fas fa-search" aria-hidden="true"></i>
              </span>
            </p>
          </div>
          {{#each patients as |patient|}}
          <a class="panel-block" id="patientBlock">
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            {{patient.id}}: {{patient.lastName}}, {{patient.firstName}}
          </a>
          {{/each}}
        </article>
      </section>

      <section class="column is-3 is-offset-1">
        <h3 class="label is-size-5">Current Treatment:</h3>
        <table class="table is-bordered">
            <tbody id="patientTreatmentList">
                
            </tbody>
        </table>
      </section>

      <section class="column is-3 is-offset-1">
        <h2 class="label is-size-5">Select Medication to Add to Treatment:</h2>
        {{#each allMedications as |medication|}}
            <input class="is-size-5" type="checkbox" id='{{medication.name}}' name="medication">
            <label class="is-size-5" for='{{medication.name}}'>{{medication.name}}</label>
            <br>                    
        {{/each}}
        <button class="button is-success mt-2" id="updateTreatmentBtn">
            Update Treatment
        </button>
      </section>
    </main> 
  </section>

<script src="./js/doctorView.js"></script>